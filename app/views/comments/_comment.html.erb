<div class="panel panel-default">
  <div class="panel-body">
    <p>
			<div class="media">
			  <div class="media-body">
			    <h4 class="media-heading"></h4>
			    	<%= comment.comment%>
			  </div>
			  <div class="media-right">
			    <a href="#">
			      <%= image_tag(@post.user.avatar.small_thumb.url)%>
				  </a>
				</div>
			</div>
		</p>        
 </div>
</div>

<p>By <%= comment.user.name %>, commented <%= time_tag comment.created_at, time_ago_in_words(comment.created_at) %> ago</p>

<p> Vote comentario!: 

  <% unless comment.user_comments_votes.include? current_user %>
      <%= link_to '+1', upcomment_post_comment_path(@post, comment) %>
  <% else %>
      <%= link_to '-1', upcomment_post_comment_path(@post, comment) %>
  <% end %>
</p>

<% if can? :destroy, comment %>	
	<%= link_to 'Delete', post_comment_path(comment.post, comment), method: :delete%>
<% end %>
