<div class="container-fluid">

<h1>Listing Posts</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Titulo</th>
        <th>Content</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag(post.user.avatar.small_thumb.url)%></td>
          <td><%= post.titulo %></td>
          <td><%= post.content %></td>
          <td><%= link_to 'Show', post %></td>
          <% if can? :update, post %>
             <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <% end %>
          <% if can? :destroy, post %>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% if (user_signed_in?) && (can? :create, Post)  %>
  <%= link_to 'New Post', new_post_path, class: "btn btn-success"  %>  
<% end %><br>

<br>

<form action="/" >
  <b>Busqueda scope [o] multisearch:</b><br>
  <input type="text" name="query" class="form-control" placeholder="A buscar"><br>
  <br>
  <input type="submit" value="Submit" class="btn btn-success"><br>
  <br>
  </form>
<br>

</div>
